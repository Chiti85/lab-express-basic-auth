<div class="container">

  <h1>Inicio de sesión de usuario</h1>

  <div class="row justify-content-center">

    <div class="col-md-8">

      <form action="/" method="POST">
        <div class="form-group">
          <label for="fieldX">Usuario</label>
          <input type="text" class="form-control" id="fieldX" name="username">
        </div>
        <div class="form-group">
          <label for="fieldY">Contraseña</label>
          <input type="password" class="form-control" id="fieldY" name="password">
        </div>

        <button type="submit" class="btn btn-dark">Iniciar sesión</button>
        <a href="/auth/signUp" class="btn btn-dark">Sign Up</a>

        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}
      </form>

    </div>
  </div>
</div>